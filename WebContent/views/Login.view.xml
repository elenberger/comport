<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="views.Login" xmlns:html="http://www.w3.org/1999/xhtml">

	<VBox fitContainer="true" alignItems="Center">
		<VBox xmlns="sap.m" height="100%" width="300px" justifyContent="Center">
					<Label xmlns="sap.m" text="User name" />
					<Input xmlns="sap.m" id="idUser" editable="true"
						valueStateText="sdsdsdsds" showValueStateMessage="true" />

					<Label xmlns="sap.m" text="Password" />
					<Input xmlns="sap.m" id="idPass" type="Password" editable="true" />
					<HBox>
						<Button xmlns="sap.m" id="idLogin" width="150px" text="Login"
							press="onLogin" />
						<Button xmlns="sap.m" id="idCalcel" width="150px" text="Cancel"
							press="" />


					</HBox>
			<html:br />
			<html:br />
			<html:br />
			<html:br />
			<html:br />
			<html:br />
			<html:br />
			<html:br />
		</VBox>
	</VBox>

</core:View>