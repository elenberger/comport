<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:semantic="sap.m.semantic"  controllerName="views.Orders" xmlns:html="http://www.w3.org/1999/xhtml">

		<SplitApp id="idOrders"  mode="HideMode" masterButtonText="List"  initialMaster="idMasterPage" >
			<masterPages>
				<semantic:MasterPage id="idMasterPage" title="OrdersApp"  >
					<List id="idOrdersList" itemPress="" items="{path: '/orders'}">
						<StandardListItem title="{num} {note}" description="{date}" info="{stat}" 
							type="Active"  press="onOrderPress" />
					</List>

                    <semantic:filter>
                        <semantic:FilterAction/>
                    </semantic:filter>
				</semantic:MasterPage>
			</masterPages>
			
			
		</SplitApp>
	
</core:View>