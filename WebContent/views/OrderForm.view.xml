<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:semantic="sap.m.semantic" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" controllerName="views.OrderForm" xmlns:html="http://www.w3.org/1999/xhtml">
    <semantic:DetailPage id="Form1" title="Orders" navButtonPress="onNavBack" showHeader="true">

        <semantic:customHeaderContent>
            <Button icon="sap-icon://home" press="onNavBack" />
        </semantic:customHeaderContent>

        <IconTabBar stretchContentHeight="true">
            <items>
                <IconTabFilter icon="sap-icon://header" id="idOverview" text="Overview">
                    <content>
                        <f:SimpleForm minWidth="1024" width="" editable="false" labelMinWidth="192" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
                            <Label text="Number" />
                            <Text text="{num}" />

                            <Label text="Description" />
                            <Text text="{note}" />

                            <Label text="Date" />
                            <Text text="{date}" />
                            
                            <Label text="Status" />
                            <Text text="{stat}" />

                        </f:SimpleForm>

                        <Table class="sapUiSizeCompact"  headerText="Partners" xmlns="sap.m" id="idTabPartners" items="{path: 'partners'}">
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{role}" />
                                        <Text text="{partnerid}" />
                                        <Text text="{partnername}" />
                                    </cells>
                                </ColumnListItem>
                            </items>

                            <columns>
                                <Column id="idParRole" width="100px">
                                    <Label text="Role" />
                                </Column>
                                <Column id="IdParID" width="100px">
                                    <Label text="Id" />
                                </Column>
                                <Column id="idParText">
                                    <Label text="Description" />
                                </Column>

                            </columns>
                        </Table>

                    </content>
                </IconTabFilter>

                <IconTabFilter icon="sap-icon://cause" id="idDetails" text="Details">
                    <content>
                    </content>

                </IconTabFilter>

                <IconTabFilter icon="sap-icon://approvals" id="idApproval" text="Approval">
                    <content>

                        <Table xmlns="sap.m" class="sapUiSizeCompact" id="idTabApproval" items="{path: 'approval'}">
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{stepno}" />
                                        <Text text="{steptype}" />
                                        <Text text="{partnername}" />
                                        <Text text="{executed}" />
                                        <Text text="{executor}" />
                                    </cells>
                                </ColumnListItem>
                            </items>

                            <columns>
                                <Column id="idStepNo" width="100px">
                                    <Label text="Step" />
                                </Column>
                                <Column id="idStepType">
                                    <Label text="Step type" />
                                </Column>
                                <Column id="idPartner">
                                    <Label text="Partner\Approver" />
                                </Column>
                                <Column id="idExecuted">
                                    <Label text="Executed" />
                                </Column>
                                <Column id="idExecutedBy">
                                    <Label text="Executed by" />
                                </Column>

                            </columns>
                        </Table>


                    </content>
                </IconTabFilter>


            </items>
        </IconTabBar>

        <semantic:positiveAction>
            <semantic:PositiveAction text="Approve" />
        </semantic:positiveAction>

        <semantic:negativeAction>
            <semantic:NegativeAction text="Reject" />
        </semantic:negativeAction>

    </semantic:DetailPage>
</core:View>
